#3


def max_value(cisla):
    return max(cisla)

def min_value(cisla):
    return min(cisla)

def avg_value(cisla):
    return sum(cisla) / len(cisla)

input_cisla = input("Zadejte seznam čísel oddělených mezerou: ")
cisla = [float(x) for x in input_cisla.split()]

max_c = max_value(cisla)
min_c = min_value(cisla)
avg_c = avg_value(cisla)

print(f"Maximální hodnota: {max_c}")
print(f"Minimální hodnota: {min_c}")
print(f"Průměrná hodnota: {avg_c}")


